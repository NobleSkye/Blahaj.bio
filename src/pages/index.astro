---
import Layout from '../layouts/Layout.astro';

const steps = [
  {
    title: "Create an Issue",
    description: "Click the 'Issues' tab on our GitHub repository and use the 'Create Profile' template."
  },
  {
    title: "Fill Your Details",
    description: "Add your username, display name, bio (with Markdown support!), and social links."
  },
  {
    title: "Submit and Wait",
    description: "Your profile will be automatically created at blahaj.bio/username within minutes!"
  }
];
---

<Layout>
  <main class="min-h-screen bg-gradient-to-b from-blue-50 to-blue-100">
    <div class="container mx-auto px-4 py-16">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-5xl font-bold text-blue-900 mb-6">blahaj.bio</h1>
        <p class="text-xl text-blue-800 mb-12">Create your personal profile page with Markdown support in minutes!</p>
        
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-12">
          <h2 class="text-2xl font-semibold text-blue-900 mb-6">How It Works</h2>
          <div class="grid gap-8 md:grid-cols-3">
            {steps.map((step, index) => (
              <div class="text-left">
                <div class="flex items-center mb-4">
                  <span class="w-8 h-8 rounded-full bg-blue-500 text-white flex items-center justify-center font-bold">
                    {index + 1}
                  </span>
                  <h3 class="ml-3 font-semibold text-lg text-blue-900">{step.title}</h3>
                </div>
                <p class="text-blue-700">{step.description}</p>
              </div>
            ))}
          </div>
        </div>

        <div class="space-y-6">
          <a 
            href="https://github.com/nobleskye/blahaj.bio/issues/new?template=create-profile.yml"
            class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
          >
            Create Your Profile
          </a>
          <p class="text-blue-700">
            <a href="https://github.com/nobleskye/blahaj.bio" class="underline">View on GitHub</a>
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>